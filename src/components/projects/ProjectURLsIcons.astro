---
import type { CollectionEntry } from "astro:content";

import IconLink from "@components/generic/IconLink.astro";

// Import social icons
import githubLogo from "@images/icons/github-mark-white.svg";
import bandcampLogo from "@images/icons/bandcamp-button-circle-line-white.svg";
import webLogo from "@images/icons/internet.svg";

// Get the URLs
export interface Props {
    urls: CollectionEntry<"projects">["data"]["urls"];
    /** Indicates how the browser should load the icons */
    loading?: "lazy" | "eager" | null;
}

const { urls, loading } = Astro.props;
---

<ul class="flex justify-center gap-8 p-0 md:gap-6.5 lg:gap-5">
    {urls.github && <IconLink platform="GitHub" url={urls.github} icon={githubLogo} loading={loading} />}
    {urls.bandcamp && <IconLink platform="Bandcamp" url={urls.bandcamp} icon={bandcampLogo} loading={loading} />}
    {urls.website && <IconLink platform="Website" url={urls.website} icon={webLogo} loading={loading} />}
</ul>
