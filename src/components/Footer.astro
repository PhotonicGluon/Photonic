---
import Social from "@components/Social.astro";

// Import social icons
import githubLogo from "@public/icons/github-mark-white.svg";
import bandcampLogo from "@public/icons/bandcamp-button-circle-line-white-256.png";
import linkedinLogo from "@public/icons/LI-In-Bug.png";
---

<footer role="contentinfo">
    <ul class="social-media-list">
        <Social platform="GitHub" url="https://github.com/PhotonicGluon" icon={githubLogo} />
        <Social platform="Bandcamp" url="https://melodicgluon.bandcamp.com/" icon={bandcampLogo} />
        <Social platform="LinkedIn" url="https://www.linkedin.com/in/kan-onn-kit" icon={linkedinLogo} />
    </ul>
</footer>

<style>
    .social-media-list {
        @apply mb-8 flex justify-center p-0;
    }
</style>
