---
import Hamburger from "@components/header/Hamburger.astro";
import Navigation from "@components/header/Navigation.astro";
---

<header>
    <nav>
        <Hamburger />
        <Navigation />
    </nav>
</header>

<style>
    header {
        @apply absolute z-10 mx-auto w-full;
    }

    nav {
        @apply mx-auto mb-0 mt-8 w-full max-w-screen-xl px-10;
    }
</style>
