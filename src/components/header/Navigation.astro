---
import { Image } from "astro:assets";

import logoImage from "@images/Icon.jpg";
import hamburgerIcon from "@images/icons/hamburger-menu.svg";
---

{/* Hamburger icon */}
<div class="float-right h-12 w-12 cursor-pointer md:hidden" id="hamburger">
    <Image
        class="relative top-1/2 ml-auto h-10 w-auto -translate-y-1/2"
        src={hamburgerIcon}
        alt="Open Menu"
        loading="eager"
    />
</div>

{/* Main navigation */}
<div class="mx-auto my-0">
    <a href="/">
        <Image
            class="float-left h-12 w-auto rounded-xl md:h-14 xl:h-16 xl:rounded-2xl"
            src={logoImage}
            alt="Photonic Logo"
            loading="eager"
        />
    </a>
    <div
        class="float-right m-0 hidden w-full md:static md:flex md:h-12 md:w-auto md:items-center md:gap-5 md:bg-none"
        id="links"
    >
        <a href="/projects">Projects</a>
        <a href="/about">About</a>
    </div>
</div>

<style>
    .expanded {
        display: unset;
    }

    #links a {
        @apply block px-0 py-3 text-center font-mono text-xl uppercase text-gray-400 no-underline transition-all duration-200 hover:text-gray-300 focus:text-gray-300 md:inline-block md:py-0 md:last:px-0 xl:text-2xl;
    }
</style>

<script>
    import $ from "jquery";

    $("#hamburger").on("click", () => {
        $("#links")[0].classList.toggle("expanded");
    });
</script>
