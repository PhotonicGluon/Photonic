---
import HeroBox from "@components/hero-box/HeroBox.astro";
import BaseLayout from "@layouts/BaseLayout.astro";

export interface Props {
    /** Title of the page */
    title: string;
    /** Subtitle of the page */
    subtitle?: string;
    /** Title of the tab; defaults to the `title` with the website name */
    tabTitle?: string;
}

const { title, subtitle, tabTitle } = Astro.props;
---

<BaseLayout title={tabTitle ? tabTitle : `${title} - Photonic`}>
    <slot name="head-fonts" slot="head-fonts" />
    <slot name="head-scripts" slot="head-scripts" />

    <HeroBox title={title} subtitle={subtitle} />
    <slot />
</BaseLayout>
