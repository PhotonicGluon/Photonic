{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "node_modules": true,
        ".astro": true
    },
    "editor.formatOnSave": true,
    "cSpell.language": "en-GB",
    "cSpell.words": [
        "backface",
        "bandcamp",
        "coeff",
        "fract",
        "frag",
        "frontmatter",
        "fwidth",
        "Heroicons",
        "highp",
        "interpolator",
        "Invertocat",
        "nanostores",
        "octothorpe",
        "Pixabay",
        "rgba",
        "seedrandom",
        "Shiki",
        "smoothstep",
        "stylesheet",
        "tweakpane",
        "twgl",
        "vars",
        "vite"
    ],
    "files.insertFinalNewline": true,
    "[glsl]": {
        "editor.defaultFormatter": "raczzalan.webgl-glsl-editor"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "tailwindCSS.includeLanguages": {
        "astro": "html"
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}
