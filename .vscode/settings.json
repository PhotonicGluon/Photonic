{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "node_modules": true,
        ".astro": true
    },
    "editor.formatOnSave": true,
    "cSpell.language": "en-GB",
    "cSpell.words": ["frag", "highp", "interpolator", "rgba", "seedrandom", "stylesheet", "tweakpane", "twgl", "vite"],
    "files.insertFinalNewline": true,
    "[glsl]": {
        "editor.defaultFormatter": "raczzalan.webgl-glsl-editor"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
}
