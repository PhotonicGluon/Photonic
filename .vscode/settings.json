{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true
    },
    "editor.formatOnSave": true,
    "cSpell.words": ["stylesheet", "tweakpane", "twgl"],
    "files.insertFinalNewline": true,
    "[glsl]": {
        "editor.defaultFormatter": "raczzalan.webgl-glsl-editor"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
}
